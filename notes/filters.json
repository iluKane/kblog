      ],
      "css": [
        { "indent": "0", "value": "img {" },
        { "indent": "2", "value": "width: 100px;" },
        { "indent": "2", "value": "height: 100px;" },
        { "indent": "0", "value": "}" },
        { "indent": "0", "value": ".contrast {" },
        {
          "indent": "2",
          "value": "filter: contrast(0.5); /* 减少 50% 的对比度 */"
        },
        { "indent": "0", "value": "}" }
      ],
      "js": [{}]
    }
  },
  {
    "tag": "h3",
    "text": "4. grayscale()"
  },
  {
    "tag": "p",
    "text": "将元素转换为灰度图像。值在 0 到 1 之间，1 表示完全灰度"
  },
  {
    "tag": "div",
    "showHTML": false,
    "showCSS": true,
    "showJS": false,
    "code": {
      "html": [
        { "indent": "0", "value": "<img src='/assets/img/tx.png' alt='' />" },
